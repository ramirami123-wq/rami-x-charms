{% doc %}
  @prompt
    Create a coming soon page with a waitlist signup form that collects email addresses

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .coming-soon-{{ ai_gen_id }} {
    padding: 60px 20px;
    text-align: center;
    background-color: {{ block.settings.background_color }};
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .coming-soon-container-{{ ai_gen_id }} {
    max-width: 600px;
    margin: 0 auto;
    width: 100%;
  }

  .coming-soon-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin-bottom: 20px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .coming-soon-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin-bottom: 30px;
    font-size: {{ block.settings.text_size }}px;
  }

  .coming-soon-form-{{ ai_gen_id }} {
    width: 100%;
    margin-top: 20px;
  }

  .coming-soon-form-field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  @media screen and (min-width: 768px) {
    .coming-soon-form-field-{{ ai_gen_id }} {
      flex-direction: row;
    }
  }

  .coming-soon-input-{{ ai_gen_id }} {
    flex-grow: 1;
    padding: 14px 18px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
  }

  .coming-soon-button-{{ ai_gen_id }} {
    padding: 14px 28px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    transition: background-color 0.3s;
  }

  .coming-soon-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .coming-soon-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    margin-top: 15px;
    font-weight: 500;
  }

  .coming-soon-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    margin-top: 15px;
    font-weight: 500;
  }

  .coming-soon-image-container-{{ ai_gen_id }} {
    margin-bottom: 30px;
    max-width: 300px;
    width: 100%;
  }

  .coming-soon-image-container-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-height: 200px;
  }
{% endstyle %}

<div class="coming-soon-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="coming-soon-container-{{ ai_gen_id }}">
    {% if block.settings.logo %}
      <img 
        src="{{ block.settings.logo | image_url: width: 300 }}" 
        alt="{{ block.settings.logo.alt | escape }}"
        width="{{ block.settings.logo.width }}"
        height="{{ block.settings.logo.height }}"
        loading="lazy"
        class="coming-soon-logo-{{ ai_gen_id }}"
      >
    {% elsif block.settings.show_placeholder %}
      <div class="coming-soon-image-container-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <h1 class="coming-soon-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    
    <div class="coming-soon-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    
    <div class="coming-soon-form-{{ ai_gen_id }}">
      {%- form 'contact' -%}
        <input type="hidden" name="contact[tags]" value="coming-soon-waitlist">
        
        <div class="coming-soon-form-field-{{ ai_gen_id }}">
          <input 
            type="email" 
            name="contact[email]" 
            class="coming-soon-input-{{ ai_gen_id }}" 
            value="{{ form.email }}"
            placeholder="{{ block.settings.email_placeholder }}"
            required
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="coming-soon-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="coming-soon-success-{{ ai_gen_id }}"
            {% endif %}
          >
          
          <button type="submit" class="coming-soon-button-{{ ai_gen_id }}">
            {{ block.settings.button_label }}
          </button>
        </div>
        
        {%- if form.posted_successfully? -%}
          <div id="coming-soon-success-{{ ai_gen_id }}" class="coming-soon-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {%- endif -%}
        
        {%- if form.errors -%}
          <div id="coming-soon-error-{{ ai_gen_id }}" class="coming-soon-error-{{ ai_gen_id }}">
            {{ form.errors.messages.email | default: block.settings.error_message }}
          </div>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Coming Soon",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "checkbox",
      "id": "show_placeholder",
      "label": "Show image placeholder when no logo",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We're working on something exciting! Sign up to be the first to know when we launch.</p>"
    },
    {
      "type": "header",
      "content": "Form"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Notify Me"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for signing up! We'll let you know when we launch."
    },
    {
      "type": "text",
      "id": "error_message",
      "label": "Error message",
      "default": "Please enter a valid email address."
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1a1b18"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#212326"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#9e132b"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#7a0f22"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input border color",
      "default": "#d2d5d9"
    },
    {
      "type": "color",
      "id": "success_color",
      "label": "Success message color",
      "default": "#008060"
    },
    {
      "type": "color",
      "id": "error_color",
      "label": "Error message color",
      "default": "#d72c0d"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 36
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Input border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Coming Soon"
    }
  ]
}
{% endschema %}