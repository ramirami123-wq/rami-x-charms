{% doc %}
  @prompt
    do a guarantees section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-guarantees-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-guarantees-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-guarantees-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.items_spacing }}px;
  }

  .ai-guarantees-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-guarantees-subtitle-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-guarantees-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.items_spacing }}px;
    margin-top: {{ block.settings.items_spacing }}px;
  }

  .ai-guarantee-item-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-guarantee-item-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_lift | times: 2 }}px {{ block.settings.hover_lift | times: 4 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-guarantee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-guarantee-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
  }

  .ai-guarantee-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.guarantee_title_size }}px;
    color: {{ block.settings.guarantee_title_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-guarantee-description-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.guarantee_description_size }}px;
    color: {{ block.settings.guarantee_description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-guarantees-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.items_spacing | times: 0.8 }}px;
    }

    .ai-guarantees-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-guarantee-item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.8 }}px;
    }

    .ai-guarantee-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-guarantee-icon-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size | times: 0.48 }}px;
      height: {{ block.settings.icon_size | times: 0.48 }}px;
    }
  }
{% endstyle %}

<div class="ai-guarantees-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-guarantees-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-guarantees-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-guarantees-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-guarantees-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-guarantees-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign guarantee_enabled_key = 'guarantee_' | append: i | append: '_enabled'
          assign guarantee_icon_key = 'guarantee_' | append: i | append: '_icon'
          assign guarantee_title_key = 'guarantee_' | append: i | append: '_title'
          assign guarantee_description_key = 'guarantee_' | append: i | append: '_description'

          assign guarantee_enabled = block.settings[guarantee_enabled_key]
          assign guarantee_icon = block.settings[guarantee_icon_key]
          assign guarantee_title = block.settings[guarantee_title_key]
          assign guarantee_description = block.settings[guarantee_description_key]
        %}

        {% if guarantee_enabled %}
          <div class="ai-guarantee-item-{{ ai_gen_id }}">
            <div class="ai-guarantee-icon-{{ ai_gen_id }}">
              {% case guarantee_icon %}
                {% when 'shield' %}
