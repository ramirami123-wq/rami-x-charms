{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  {{  slide_text_font | font_face: font_display: 'swap' }}
  {{  slide_author_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-body-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ body_gap_mobile }}px;
  }

  .testimonials-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ content_horizontal_align_mobile }};
    padding: {{ content_padding_vertical_mobile }}px 0px;
  }

  .testimonials-review-text-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    max-width: fit-content;
    flex-direction: column;
  }

  .testimonials-review-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ review_text_size_mobile }}px;
    color: {{ review_text_color }};
    line-height: {{ review_text_height }}%;
    text-transform: unset;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 1px;
    max-width: fit-content;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size }}px;
    height: {{ stars_size }}px;
    object-fit: cover;
  }

  .testimonials-heading-{{ section.id }} {
    margin-top: {{ heading_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .testimonials-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .testimonials-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: fit-content;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
  }

  .testimonials-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-slider-wrapper-{{ section.id }} {
    position: relative;
    display: grid;
  }

  .testimonials-slider-{{ section.id }} {
    min-width: 0;
    width: 100%;
    padding: 40px 0px !important;
  }

  .testimonials-slider-wrapper-{{ section.id }}::before {
    content: "";
    width: 17%;
    height: 100%;
    background: linear-gradient(270deg, {{ background_color | hex_to_rgba: 0 }} 0%, {{ background_color | hex_to_rgba: 0.7 }} 60%, {{ background_color | hex_to_rgba: 1 }} 100%);
    display: inherit;
    position: absolute;
    top: 0;
    z-index: 2;
  }

  .testimonials-slider-wrapper-{{ section.id }}::after {
    content: "";
    width: 17%;
    height: 100%;
    background: linear-gradient(90deg, {{ background_color | hex_to_rgba: 0 }} 0%, {{ background_color | hex_to_rgba: 0.7 }} 60%, {{ background_color | hex_to_rgba: 1 }} 100%);
    display: inherit;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
  }

  .testimonials-slide-{{ section.id }} {
    transition: all 0.25s ease 0s;
    z-index: 0 !important;
  }

  .testimonials-slide-{{ section.id }}.swiper-slide-active {
    transform: scale(1.05) !important;
    transition: all 0.25s ease 0s;
  }

  .testimonials-slide-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    overflow: hidden;
  }

  .testimonials-slide-image-{{ section.id }} img,
  .testimonials-slide-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-slide-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .testimonials-slide-content-{{ section.id }} {
    position: relative;
    margin-top: {{ slide_content_mt_mobile }}px;
    margin-left: 10px;
    margin-right: 10px;
    background-color: {{ slide_content_bg_color }};
    padding: {{ slide_content_padding_vertical_mobile }}px {{ slide_content_padding_horizontal_mobile }}px;
    border-radius: {{ slide_content_radius }}px;
    border: {{ slide_content_border_thickness }}px solid {{ slide_content_border_color }};
    text-align: center;
    box-shadow: 0 2px 10px #48484826;
  }

  .testimonials-slide-content-{{ section.id }}::after {  
    content: "";
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 15px solid {{ slide_content_bg_color }};
    position: absolute;
    top: 99.8%;
    left: 50%;
    transform: translate(-50%);
    filter: drop-shadow(0px 2px 10px rgba(72, 72, 72, .15));
  }  

  .testimonials-slide-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ slide_text_size_mobile }}px;
    color: {{ slide_text_color }};
    line-height: {{ slide_text_height }}%;
    text-transform: unset;
  }

  .testimonials-slide-author-{{ section.id }} {
    margin: 0;
    margin-top: {{ slide_author_mt_mobile }}px;
    font-size: {{ slide_author_size_mobile }}px;
    color: {{ slide_author_color }};
    line-height: {{ slide_author_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-btn-prev-{{ section.id }},
  .testimonials-btn-next-{{ section.id }} {
    position: absolute;
    padding: 0px;
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
    z-index: 2;
    top: {{ arrow_vertical_position_mobile }}%;
    transform: translateY(-{{ arrow_vertical_position_mobile }}%);
  }

  .testimonials-btn-prev-{{ section.id }} {
    left: 4%;
  }

  .testimonials-btn-next-{{ section.id }} {
    right: 4%;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon,
  .testimonials-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
  .testimonials-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
  .testimonials-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .testimonials-btn-prev-{{ section.id }} span,
  .testimonials-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
  .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-body-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
      gap: {{ body_gap }}px;
    }

    .testimonials-content-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
      padding: {{ content_padding_vertical }}px 0px;
    }

    .testimonials-review-text-{{ section.id }} {
      flex-direction: row;
    }

    .testimonials-review-text-{{ section.id }} * {
      font-size: {{ review_text_size }}px;
    }

    .testimonials-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
      text-align: {{ text_align }};
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
      color: {{ heading_color }};
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }

    .testimonials-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
      color: {{ text_color }};
    }

    .testimonials-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .testimonials-slide-content-{{ section.id }} {
      margin-top: {{ slide_content_mt }}px;
      padding: {{ slide_content_padding_vertical }}px {{ slide_content_padding_horizontal }}px;
    }

    .testimonials-slide-text-{{ section.id }} * {
      font-size: {{ slide_text_size }}px;
    }

    .testimonials-slide-author-{{ section.id }} {
      margin-top: {{ slide_author_mt }}px;
      font-size: {{ slide_author_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
      top: {{ arrow_vertical_position }}%;
      transform: translateY(-{{ arrow_vertical_position }}%);
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
    .testimonials-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
    .testimonials-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }

    .testimonials-btn-prev-{{ section.id }} {
      left: 13.5%;
    }
  
    .testimonials-btn-next-{{ section.id }} {
      right: 13.5%;
    }
  }
  
